{
    "name": "hovrly",
    "productName": "Hovrly",
    "version": "2.0.3",
    "description": "Hovrly â€” simple multi clock",
    "main": "app/index.js",
    "scripts": {
        "start": "electron .",
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=app/static/icon.icns --prune=true --out=builds --ignore=resources",
        "package-win": "electron-packager . --overwrite --platform=win32 --icon=app/static/icon.ico --prune=true --asar=true --out=builds --ignore=resources --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Hovrly\"",
        "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --icon=app/static/icon.png --prune=true --out=builds --ignore=resources",
        "package-mac-installer": "electron-installer-dmg builds/Hovrly-darwin-x64/Hovrly.app Hovrly --out=builds --overwrite --icon=app/static/icon.icns --icon-size=128 --background=app/static/installer-bg.png",
        "build": "npm run package-mac && npm run package-mac-installer",
        "spaces": "app/bin/do-spaces.sh"
    },
    "author": "Alexey Tarutin",
    "private": true,
    "homepage": "https://github.com/tarutin/hovrly",
    "repository": {
        "type": "git",
        "url": "https://github.com/tarutin/hovrly.git"
    },
    "bugs": {
        "url": "https://github.com/tarutin/hovrly/issues"
    },
    "keywords": [
        "desktop",
        "electron",
        "electron-app",
        "clock",
        "multi clock",
        "hovrly"
    ],
    "license": "MIT",
    "devDependencies": {
        "electron": "^10.1.2",
        "electron-installer-dmg": "^3.0.0",
        "electron-packager": "^15.1.0",
        "electron-winstaller": "^4.0.1"
    },
    "dependencies": {
        "auto-launch": "^5.0.5",
        "electron-dl": "^3.0.2",
        "electron-positioner": "^4.1.0",
        "electron-settings": "^4.0.2",
        "mysql2": "^2.1.0",
        "request": "^2.88.2"
    }
}
